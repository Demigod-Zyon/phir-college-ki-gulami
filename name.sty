    \setlength{\topmargin}{50mm}   % really 1.5in, added by bph
                               % to meet OAP standards
    \normalfont\normalsize\bfseries   
    \begin{center}
     \etchapterheadstyle{#1} 
        %     TITLE OF CHAPTER
    \end{center}
    \setlength{\topmargin}{50mm}   % back to 1in
}}







